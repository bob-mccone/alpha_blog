<!--Article form page-->
<!--This is a partial, it removes redunancies, it is identified by putting an "_" infront of the file name-->

<!--Refer to the error partial file and then tell it what the obj is in that file, in this case it will be the article-->
<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-xs-12">
    <!--Ruby form builder-->
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <!--Title label-->
          <%= f.label :title %>
        </div>
        <div class="col-sm-4">
          <!--Title input text box-->
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <!--Description label-->
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <!--Description input text area box-->
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-8">
            <!--Displaying category as check boxes-->
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-18">
          <!--Submit button-->
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      <!--Creating a link so they can go back-->
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>
</div>