<h1 align="center">
  Sign up for alpha blog
</h1>

<!--Refer to the error partial file and then tell it what the obj is in that file, in this case it will be the user-->
<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">
    <!--Ruby form builder-->
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <!--Displays username label and textbox-->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <!--Username label-->
          <%= f.label :username %>
        </div>
        <div class="col-sm-4">
          <!--Username input textbox-->
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>
      <!--Displays email label and textbox-->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <!--Email label-->
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <!--Email input textbox-->
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>
      <!--Displays password label and textbox-->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <!--Description label-->
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <!--Description input text area box-->
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>
      <!--Displays submit button-->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-18">
          <!--Submit button-->
          <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      <!--Creating a link so they can go back-->
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>
</div>