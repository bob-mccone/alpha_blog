<!--User index file-->
<h1 align="center">
  All alpha bloggers
</h1>
<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <!--Displays user gravatar pic-->
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <!--Displays username with a link to the persons profile-->
            <%= link_to user.username, user_path(user) %>
          </li>
          <!--Displays how many articles that person has written-->
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
</div>