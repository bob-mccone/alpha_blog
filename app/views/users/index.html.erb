<!--User index file-->
<h1 align="center">
  All alpha bloggers
</h1>
<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <!--Displays user gravatar pic-->
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <!--Displays username with a link to the persons profile-->
            <%= link_to user.username, user_path(user) %>
          </li>
          <!--Displays how many articles that person has written-->
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <!--If logged in user is an admin then display the delete link-->
          <% if logged_in? and current_user.admin? %>
            <li> <%= link_to "Delete this user", user_path(user), method: :delete, 
                    data: { confirm: "Are you sure you want to delete the user and all their articles?" } %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>