<!--New login page-->
<h1 align="center">
  Log in
</h1>

<!--Change @user to session and then add the url that it is going to between } and )-->
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <!--Displays user log in label and textbox-->
  <div class="form-group">
    <div class="control-label col-sm-2">
      <!--Email label-->
      <%= f.label :email %>
    </div>
    <div class="col-sm-4">
      <!--Email input textbox-->
      <%= f.text_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
    </div>
  </div>
  <!--Displays password label and textbox-->
  <div class="form-group">
    <div class="control-label col-sm-2">
      <!--Password label-->
      <%= f.label :password %>
    </div>
    <div class="col-sm-8">
      <!--Password input text area box-->
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
  </div>
  <!--Displays submit button-->
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-18">
      <!--Submit button, because this is now in a partial form new_record checks if it is a new record-->
      <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">
  <!--Creating a link so they can go back-->
  [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>
